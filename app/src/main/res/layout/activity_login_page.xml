<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f15421"
    tools:context="Activity.Login_page">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/foodpe_logo" />

    <EditText
        android:id="@+id/editTextPersonNumber"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Mobile Number (10 Digit)"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextPersonNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E33333"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Login" />

    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"

        android:text="Forgot password" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Don't have an account?Sign up now" />

</RelativeLayout>