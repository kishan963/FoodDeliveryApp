<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f15421"
    tools:context="Fragment.ProfileFragement">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_profile" />

    <EditText
        android:id="@+id/editTextPersonName_profile"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_corner_views"
        android:textColor="@color/black"
        android:enabled="false"
        android:textAlignment="center"
        android:ems="10"

        android:inputType="text" />

    <EditText
        android:id="@+id/editTextMobileNumber_profile"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextPersonName_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_views"
        android:textColor="@color/black"
        android:enabled="false"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextEmail_profile"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextMobileNumber_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner_views"
        android:enabled="false"
        android:textAlignment="center"
        android:ems="10"

        android:inputType="text" />

    <EditText
        android:id="@+id/editTextAddress_profile"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextEmail_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_views"
        android:enabled="false"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="text" />




</RelativeLayout>