<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f15421"
    tools:context=".Forget_Page2">

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:text="Enter your received OTP below" />

    <EditText
        android:id="@+id/editTextOTP"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" OTP(4 Characters)"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editTextOTP"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/editTextReEnterNewPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editTextNewPassword"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Confirm password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/Submit_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#E33333"
        android:layout_below="@id/editTextReEnterNewPassword"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:text="Submit" />

</RelativeLayout>