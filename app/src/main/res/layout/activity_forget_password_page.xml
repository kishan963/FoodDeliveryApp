<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f15421"
    tools:context="Activity.Forget_Password_page">

    <ImageView
        android:id="@+id/logo_image_forget"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/foodpe_logo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image_forget"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="20sp"
        android:text="Enter your register mobile number and email below" />

    <EditText
        android:id="@+id/editTextMobileNumber_forget"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Mobile Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextEmailAddress_forget"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editTextMobileNumber_forget"
        android:background="@drawable/rounded_corner_views"
        android:ems="10"
        android:hint=" Email Address"
        android:inputType="textEmailAddress"
        />

    <Button
        android:id="@+id/Next_button_forget"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextEmailAddress_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E33333"
        android:text="Next"
        android:textSize="23sp" />



</RelativeLayout>