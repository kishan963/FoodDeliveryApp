<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearlayout_history_single"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <TextView
            android:id="@+id/textView_history_single"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2_history_single"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="2"
            android:text="TextView" />
    </LinearLayout>

    <ListView
        android:id="@+id/ListView_history_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearlayout_history_single"
        />

</RelativeLayout>