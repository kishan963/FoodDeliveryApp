<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="130dp"
     android:layout_width="match_parent"
    android:id="@+id/layout_single"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_margin="8dp"

    android:padding="5dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:elevation="5dp"
    >


    <ImageView
        android:layout_weight="1.7"
        android:id="@+id/imgRestaurantImage"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_weight="3.1"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textViewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#000000"/>



        <TextView
            android:id="@+id/txtOnePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textViewRecyclerView"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:textColor="#357a38"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_fav_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:layout_gravity="top"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/ic_fav" />

    <TextView
        android:id="@+id/txtRestaurantRating"
        android:layout_weight="0.6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textColor="#ffca28"
        android:gravity="top"
        android:textSize="15sp"
        android:textStyle="bold">

    </TextView>


</LinearLayout>
</androidx.cardview.widget.CardView>